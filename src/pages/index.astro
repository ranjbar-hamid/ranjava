        <h3 class="text-xl font-lalezar">ارتباط با ما</h3>
      </p>
    </section>
  </main>
  <footer
    class="absolute w-full bottom-0 flex backdrop-blur-md justify-center p-2 text-center text-2xl font-bold border-t-1"
  >
    footer!
  </footer>
</Layout>

<script>
  import { inView, animate, stagger } from "motion";
  const m = document.getElementsByTagName("main");

  inView("li", (element) => {
    animate(element, { x: [-50, 0] }, { duration: 0.2, delay: stagger(0.6) });
  });
</script>
